package danraies.commutativealgebra;

class ZeroEqualsZeroTest extends UnitTest {
    ZeroEqualsZeroTest(String testName,
                       int numberOfTests,
                       FactoryLogger log) {
        super(testName, numberOfTests, log);
    }
    
    TestResult runTest(ElementFactory factory) {
        CommutativeMonoidElementFactory cFactory;
        try {
            cFactory = (CommutativeMonoidElementFactory) factory;
        } catch (Exception ex) {
            throw new RuntimeException(WRONG_FACTORY_TYPE, ex);
        }
        CommutativeMonoidElement possibleZero = cFactory.getZero();
        return new TestResult(TEST_NAME, possibleZero.isZero(), possibleZero);
    }

    private static String TEST_NAME = "Zero Equals Zero";

    private static String WRONG_FACTORY_TYPE =
        "The wrong factory type was passed to this method.";
}
